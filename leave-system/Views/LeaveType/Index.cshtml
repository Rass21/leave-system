@model IEnumerable<leave_system.Models.LeaveTypeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Types</h1>
<hr />
<p>
    <a asp-action="Create" class="btn btn-success">Create New <i class="fas fa-plus"> </i></a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultDays)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">
                    <i class="fas fa-pencil-alt"></i>
                </a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">
                    <i class="fas fa-info"></i>
                </a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this item?')"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{ 
<script>
    $(document).ready(function () {
        $('#tblData').DataTable();
    });
</script>
}